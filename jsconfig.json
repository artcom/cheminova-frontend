{
  "compilerOptions": {
    "baseUrl": ".",
    "checkJs": false,
    "allowJs": true,
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@api/*": ["src/api/*"],
      "@ui/*": ["src/components/UI/*"],
      "@theme/*": ["src/theme/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
