{
  "compilerOptions": {
    "baseUrl": ".",
    "checkJs": false,
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "target": "es2022",
    "types": ["vite/client"],
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@api/*": ["src/api/*"],
      "@ui/*": ["src/components/UI/*"],
      "@providers/*": ["src/providers/*"]
    }
  },
  "include": ["src/**/*", "vite.config.js"],
  "exclude": ["node_modules"]
}
